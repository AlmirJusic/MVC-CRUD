@using MVCCrud.Models.Champion;
@model List<ChampionIndexVM>;

@{
    ViewData["title"] = "Champions";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>

<h3>@ViewData["title"]</h3>

<div>
    <p>
        @using (Html.BeginForm("Index","Champion",FormMethod.Get))
        {
            <b>Pretraga po: </b>

            @Html.RadioButton("option","Name",true) <text> Naziv </text>
            @Html.RadioButton("option","Role") <text> Role </text>
            @Html.RadioButton("option","Chest") <text> Chest </text>
            @Html.RadioButton("option","Sve") <text> Sve </text>
            <br />
            @Html.TextBox("search") <input type="submit" value="Pretrazi" class="btn btn-info btn-sm" />
        }
    </p>
</div>


@if(!Model.Any())
{
    <div class="alert alert-info clearfix">
        <span>Nema championa za prikaz!</span>

        <a asp-controler="Champion" asp-action="Dodaj" class="btn btn-danger btn-xs float-right">Dodaj</a>
    </div>
    
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Dobio chest?</th>
                <th>Rola</th>

                <th class="text-right" style="text-align:end">
                    <a asp-controller="Champion" asp-action="Dodaj" class="btn btn-info btn-sm">Dodaj</a>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    @if(item.JelChest==true)
                    {
                        <td><button class="btn btn-success disabled">DA</button></td>
                    }
                    else
                    {
                        <td><button class="btn btn-danger disabled">NE</button></td>
                    }
                    
                    <td>@item.Role</td>

                    <td class="text-right" style="text-align:end">
                        <a asp-controller="Champion" asp-action="Uredi" asp-route-id="@item.Champion_ID" class="btn btn-info btn-sm">Uredi</a>
                        <a asp-controller="Champion" asp-action="Uredi" asp-route-id="@item.Champion_ID" class="btn btn-danger btn-sm">X</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}