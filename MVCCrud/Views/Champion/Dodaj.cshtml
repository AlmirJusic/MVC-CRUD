@using MVCCrud.Models.Champion;
@model ChampionDodajVM;

@{
    if(Model.Champion_ID==0)
    {
        ViewData["title"] = "Dodavanje champa";
    }
    else
    {
        ViewData["title"] = "Editovanje champa";
    }
}

<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-left">
                <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm">Menu</a>
            </th>
        </tr>
    </thead>
</table>

<h3>@ViewData["Title"]</h3>

<form asp-action="Snimi" method="post">
    @Html.HiddenFor(s=>s.Champion_ID)
    <div class="form-group">
        <label>Naziv champa</label>
        <input type="text" asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Rola</label>
        <select asp-for="Role_ID" asp-items="Model.Role" class="form-control"></select>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Dobio chest?</label>
        <input type="checkbox" asp-for="JelChest"  />
        <span asp-validation-for="JelChest" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Snimi" class="btn btn-primary" />
</form>

